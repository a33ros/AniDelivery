<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/selectionCardShippingAddress"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:background="@drawable/textbox_background"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/backgroundSelection"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/deliveryShippingAddressType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Home"
            android:textSize="20sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:background="@color/base_yellow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/deliveryShippingFullName"/>

        <TextView
            android:id="@+id/deliveryShippingFullName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Full Name"
            android:textSize="18.5sp"
            android:fontFamily="@font/poppins"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/deliveryShippingAddressType"
            app:layout_constraintEnd_toStartOf="@id/deliveryShippingPhoneNumber"/>

        <TextView
            android:id="@+id/deliveryShippingPhoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="(Phone Number)"
            android:textSize="18.5sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/deliveryShippingFullName"
            app:layout_constraintEnd_toEndOf="parent"/>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/deliveryShippingFullName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/deliveryShippingStreet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Street"
                android:textSize="17sp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/deliveryShippingBarangay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Barangay"
                android:textSize="17sp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/deliveryShippingCity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="17sp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/deliveryShippingProvince"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Province"
                android:textSize="17sp"
                android:fontFamily="@font/poppins"/>

            <TextView
                android:id="@+id/deliveryShippingPostalCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PC"
                android:textSize="17sp"
                android:fontFamily="@font/poppins"
                android:layout_row="1"
                android:layout_column="0"/>
        </GridLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>